@model ShopDoCu.Models.Coupon
@{
    ViewData["Title"] = "Tạo mã giảm giá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4" style="max-width: 800px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0 fw-bold"><i class="bi bi-ticket-perforated me-2"></i>Tạo mã giảm giá mới</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="CreateCoupon" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Mã Code (VD: SALE50)</label>
                        <input asp-for="Code" class="form-control text-uppercase" required placeholder="Nhập mã không dấu..." />
                        <span asp-validation-for="Code" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Số lượng mã</label>
                        <input asp-for="Quantity" type="number" class="form-control" value="100" min="1" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Loại giảm giá</label>
                        <select asp-for="DiscountType" class="form-select">
                            <option value="Fixed">Trừ tiền trực tiếp (VNĐ)</option>
                            <option value="Percent">Trừ theo phần trăm (%)</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Giá trị giảm</label>
                        <input asp-for="DiscountValue" type="number" class="form-control" required placeholder="VD: 50000 hoặc 10" />
                        <div class="form-text">Nhập số tiền hoặc số % tùy theo loại đã chọn.</div>
                    </div>

                    <div class="col-12">
                        <label class="form-label fw-bold">Đơn hàng tối thiểu (VNĐ)</label>
                        <input asp-for="MinOrderAmount" type="number" class="form-control" value="0" />
                        <div class="form-text">Đơn hàng phải đạt giá trị này mới được áp dụng mã.</div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Ngày bắt đầu</label>
                        <input asp-for="StartDate" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Ngày kết thúc</label>
                        <input asp-for="EndDate" type="datetime-local" class="form-control" />
                    </div>

                    <div class="col-12">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                            <label class="form-check-label fw-bold" for="IsActive">Kích hoạt ngay</label>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-action="Coupons" class="btn btn-secondary">Hủy bỏ</a>
                    <button type="submit" class="btn btn-primary px-4 fw-bold">Tạo mã</button>
                </div>
            </form>
        </div>
    </div>
</div>