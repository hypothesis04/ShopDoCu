@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <h3 class="mb-4 fw-bold">Tổng quan hệ thống</h3>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary text-white rounded p-3 me-3">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0 text-muted">Người dùng</h5>
                    </div>
                    <h2 class="fw-bold mb-0">@ViewBag.TotalUsers</h2>
                    <small class="text-muted">Tổng người dùng</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success text-white rounded p-3 me-3">
                            <i class="bi bi-box-seam fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0 text-muted">Sản phẩm</h5>
                    </div>
                    <h2 class="fw-bold mb-0">@ViewBag.TotalProducts</h2>
                    <small class="text-muted">Tổng sản phẩm</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning text-white rounded p-3 me-3">
                            <i class="bi bi-cart fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0 text-muted">Đơn hàng</h5>
                    </div>
                    <h2 class="fw-bold mb-0">@ViewBag.TotalOrders</h2>
                    <small class="text-muted">Tổng đơn hàng</small>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info text-white rounded p-3 me-3">
                            <i class="bi bi-tags fs-4"></i>
                        </div>
                        <h5 class="card-title mb-0 text-muted">Danh mục</h5>
                    </div>
                    <h2 class="fw-bold mb-0">@ViewBag.TotalCategories</h2>
                    <small class="text-muted">Danh mục sản phẩm</small>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.PendingOrders > 0)
    {
        <div class="alert alert-primary d-flex align-items-center justify-content-between shadow-sm border-0 mb-3" role="alert">
            <div>
                <i class="bi bi-bell-fill me-2"></i>
                Có <strong>@ViewBag.PendingOrders</strong> đơn hàng mới đang chờ xử lý!
            </div>
            <a href="/Admin/Orders" class="btn btn-sm btn-light fw-bold text-primary">Xem đơn hàng</a>
        </div>
    }

    @if (ViewBag.PendingProducts > 0)
    {
        <div class="alert alert-warning d-flex align-items-center justify-content-between shadow-sm border-0 mb-4" role="alert">
            <div>
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Có <strong>@ViewBag.PendingProducts</strong> sản phẩm đang chờ duyệt!
            </div>
            <a href="/Admin/Products" class="btn btn-sm btn-light fw-bold text-warning">Xem ngay</a>
        </div>
    }

    <div class="row g-4">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="bi bi-info-circle me-2"></i>Admin
                </div>
                <div class="card-body">
                    <p class="fw-bold">Xin chào, Admin</p>
                    <p class="col-md-8 fs-4 mx-auto text-muted">Chào mừng bạn trở lại trang quản trị. </p>
                    <p class="col-md-10 fs-4 mx-auto text-muted">Hãy kiểm tra các đơn hàng mới và duyệt sản phẩm.</p>
                   
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-success text-white fw-bold">
                    <i class="bi bi-lightning-fill me-2"></i>Hành động nhanh
                </div>
                <div class="card-body d-grid gap-3">
                    <a href="/Admin/Products" class="btn btn-warning py-2 text-dark fw-bold">
                        <i class="bi bi-check-circle me-2"></i>Duyệt sản phẩm chờ
                    </a>
                    <a href="/Admin/Orders" class="btn btn-info py-2 text-white fw-bold">
                        <i class="bi bi-cart-check me-2"></i>Xem đơn hàng mới
                    </a>
                    <a href="/Admin/Statistics" class="btn btn-success py-2 fw-bold">
                        <i class="bi bi-graph-up me-2"></i>Xem báo cáo thống kê
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>