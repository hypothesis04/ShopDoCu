@model ShopDoCu.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.OrderId;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Chi tiết đơn hàng #@Model.OrderId</h3>
        <a href="/Admin/Orders" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            
            <div class="card shadow-sm mb-4 border-top border-4 border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Trạng thái hiện tại</h6>
                            @if (Model.Status == "Pending") { <span class="badge bg-warning text-dark fs-5 px-3 py-2">Chờ xác nhận</span> }
                            else if (Model.Status == "Shipping") { <span class="badge bg-info text-dark fs-5 px-3 py-2">Đang giao hàng</span> }
                            else if (Model.Status == "Completed") { <span class="badge bg-success fs-5 px-3 py-2">Hoàn thành</span> }
                            else if (Model.Status == "Cancelled") { <span class="badge bg-danger fs-5 px-3 py-2">Đã hủy</span> }
                            else if (Model.Status == "ReturnRequested") { <span class="badge bg-warning text-dark fs-5 px-3 py-2">Khách yêu cầu trả hàng</span> }
                            else if (Model.Status == "Returned") { <span class="badge bg-primary fs-5 px-3 py-2">Đã trả hàng & Hoàn tiền</span> }
                            else { <span class="badge bg-secondary fs-5 px-3 py-2">@Model.Status</span> }
                        </div>
                        
                        <div class="text-end">
                             <small class="text-muted d-block">Đơn hàng của Shop:</small>
                             <span class="fw-bold text-primary fs-5">
                                 <i class="bi bi-shop me-1"></i>
                                 @(Model.OrderDetails.FirstOrDefault()?.Product?.Seller?.UserName ?? "Seller #" + Model.SellerId)
                             </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white fw-bold py-3">Danh sách sản phẩm</div>
                <div class="table-responsive">
                    <table class="table mb-0 align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-3">Sản phẩm</th>
                                <th class="text-center">SL</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end pe-3">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                var img = item.Product?.ProductImages.FirstOrDefault()?.ImageUrl ?? "https://placehold.co/50";
                                <tr>
                                    <td class="ps-3">
                                        <div class="d-flex align-items-center">
                                            <img src="@img" width="50" height="50" class="rounded me-3 border object-fit-cover">
                                            <div>
                                                <div class="fw-bold text-truncate" style="max-width: 300px;">@item.Product?.ProductName</div>
                                                <small class="text-muted">Mã SP: @item.ProductId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.UnitPrice?.ToString("N0")₫</td>
                                    <td class="text-end fw-bold pe-3">@((item.UnitPrice * item.Quantity)?.ToString("N0"))₫</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold">TỔNG THANH TOÁN:</td>
                                <td class="text-end fw-bold text-danger fs-4 pe-3">@Model.TotalAmount?.ToString("N0")₫</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-header bg-white fw-bold py-3">Thông tin giao nhận</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Người nhận</label>
                            <div class="fw-bold">@Model.User?.FullName</div>
                            <div>@Model.User?.Phone</div>
                            <div>@Model.User?.Email</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Ngày đặt hàng</label>
                            <div class="fw-bold">@Model.OrderDate?.ToString("dd/MM/yyyy HH:mm")</div>
                            <div class="mt-2">
                                <span class="badge bg-light text-dark border">
                                    @Model.PaymentMethod
                                </span>
                                <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-secondary")">
                                    @(Model.PaymentStatus == "Paid" ? "Đã thanh toán" : "Chưa thanh toán")
                                </span>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="text-muted small">Địa chỉ giao hàng</label>
                            <div class="alert alert-light border border-dashed d-flex align-items-center">
                                <i class="bi bi-geo-alt-fill text-danger fs-5 me-2"></i>
                                <span class="fw-medium">@Model.ShippingAddress</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>