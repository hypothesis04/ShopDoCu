@model IEnumerable<ShopDoCu.Models.Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <h3 class="mb-4 fw-bold">Quản lý đơn hàng</h3>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>TT Thanh toán</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">#@item.OrderId</td>
                            <td>
                                <div class="fw-bold">@item.User?.UserName</div>
                                <small class="text-muted">@(item.User?.Email ?? "No Email")</small>
                            </td>
                            <td>@item.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="fw-bold text-danger">@item.TotalAmount?.ToString("N0")₫</td>
                            <td>
                                <span class="badge bg-light text-dark border">@item.PaymentMethod</span>
                                <span class="badge @(item.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark")">
                                    @(item.PaymentStatus ?? "Unpaid")
                                </span>
                            </td>
                            <td>
                                @if (item.Status == "Pending") { <span class="badge bg-warning text-dark">Chờ xác nhận</span> }
                                else if (item.Status == "Shipping") { <span class="badge bg-info text-dark">Đang giao</span> }
                                else if (item.Status == "Completed") { <span class="badge bg-success">Hoàn thành</span> }
                                else if (item.Status == "Cancelled") { <span class="badge bg-danger">Đã hủy</span> }
                                else { <span class="badge bg-secondary">@item.Status</span> }
                            </td>
                            <td>
                                <a href="/Admin/OrderDetails/@item.OrderId" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> Xem & Xử lý
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>