@model IEnumerable<ShopDoCu.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
    var categories = ViewBag.Categories as IEnumerable<ShopDoCu.Models.Category>;
}

<div class="container my-4">
    <div class="row g-3 mb-5">
        
        <div class="col-lg-3 d-none d-lg-block">
            <div class="card h-100 border-0 shadow-sm category-sidebar">
                <div class="card-header bg-primary text-white fw-bold py-3 text-uppercase">
                    <i class="bi bi-list me-2"></i>Danh mục sản phẩm
                </div>
                <div class="list-group list-group-flush h-100">
                    @if (categories != null)
                    {
                        foreach (var cat in categories)
                        {
                            <div class="list-group-item list-group-item-action category-item p-0 border-0">
                                <a href="/Product?categoryId=@cat.CategoryId" class="d-flex justify-content-between align-items-center text-decoration-none text-dark w-100 p-3">
                                    <span>
                                        @if(cat.CategoryName.Contains("Điện thoại")) { <i class="bi bi-phone me-2 text-secondary"></i> }
                                        else if(cat.CategoryName.Contains("Laptop")) { <i class="bi bi-laptop me-2 text-secondary"></i> }
                                        else { <i class="bi bi-tag me-2 text-secondary"></i> }
                                        @cat.CategoryName
                                    </span>
                                    
                                    @if (cat.InverseParent != null && cat.InverseParent.Any())
                                    {
                                        <i class="bi bi-chevron-right small text-muted"></i>
                                    }
                                </a>

                                @if (cat.InverseParent != null && cat.InverseParent.Any())
                                {
                                    <div class="submenu">
                                        <div class="px-3 py-2 text-muted small fw-bold border-bottom bg-light text-uppercase">
                                            @cat.CategoryName
                                        </div>
                                        @foreach (var sub in cat.InverseParent)
                                        {
                                            <a href="/Product?categoryId=@sub.CategoryId">
                                                <i class="bi bi-caret-right-fill me-1 small text-secondary"></i>@sub.CategoryName
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    }
                    
                    <a href="/Product" class="list-group-item list-group-item-action text-center text-primary fw-bold py-3 border-top">
                        Xem tất cả <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="banner-carousel h-100">
               <div id="bannerCarousel" class="carousel slide h-100 shadow-sm rounded-3 overflow-hidden" 
                    data-bs-ride="carousel" 
                    data-bs-interval="4500">
                    <div class="carousel-inner h-100">
                        <div class="carousel-item active h-100">
                            <img src="/images/banner/banner1.jpg" class="d-block w-100 h-100" alt="Banner 1" 
                                 style="object-fit: contain; width: 100%; height: 380px; background-color: #e9ecef;" 
                                 onerror="this.src='https://via.placeholder.com/900x400/0d6efd/ffffff?text=Chợ+Đồ+Cũ+Công+Nghệ'" />
                        </div>
                        <div class="carousel-item h-100">
                            <img src="/images/banner/banner2.jpg" class="d-block w-100 h-100" alt="Banner 2" 
                                 style="object-fit: contain; width: 100%; height: 380px; background-color: #e9ecef;"
                                 onerror="this.src='https://via.placeholder.com/900x400/198754/ffffff?text=Mua+Bán+An+Toàn'" />
                        </div>
                        <div class="carousel-item h-100">
                            <img src="/images/banner/banner3.jpg" class="d-block w-100 h-100" alt="Banner 3" 
                                 style="object-fit: contain; width: 100%; height: 380px; background-color: #e9ecef;" 
                                 onerror="this.src='https://via.placeholder.com/900x400/0dcaf0/ffffff?text=Giá+Rẻ+Mỗi+Ngày'" />
                        </div>
                    </div>
                    
                    <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2 border-primary">
        <h4 class="mb-0 fw-bold text-uppercase text-primary">
            <i class="bi bi-stars me-2"></i>Sản phẩm mới về
        </h4>
        <a href="/Product" class="btn btn-outline-primary btn-sm rounded-pill px-3">Xem tất cả</a>
    </div>

    <div class="row g-3">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                var mainImage = product.ProductImages?.FirstOrDefault(img => img.IsMain == true) ?? product.ProductImages?.FirstOrDefault();
                var imageUrl = mainImage?.ImageUrl ?? "/images/no-image.jpg";

                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card product-card h-100 border bg-white">
                        <a href="/Product/Details/@product.ProductId" class="text-decoration-none text-dark">
                                       <div class="product-image-wrapper position-relative bg-white border-bottom" style="height: 200px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                        <img src="@imageUrl" alt="@product.ProductName" 
                                            style="width: 100%; height: 100%; object-fit: contain; padding: 15px; transition: transform 0.3s ease;" 
                                            onerror="this.src='/images/no-image.jpg'" />
                                
                                @if (product.IsNew == true) 
                                { 
                                    <span class="badge bg-success position-absolute top-0 start-0 m-2 shadow-sm">Mới</span> 
                                }
                                @if (product.Quantity <= 0)
                                {
                                    <span class="badge bg-secondary position-absolute top-0 end-0 m-2 shadow-sm">Hết hàng</span>
                                }
                            </div>

                            <div class="card-body p-3">
                                <h6 class="card-title product-name fw-bold mb-2 text-dark">@product.ProductName</h6>
                                <div class="d-flex justify-content-between align-items-end mt-2">
                                    <span class="text-danger fw-bold fs-5">@product.Price.ToString("N0")₫</span>
                                    <small class="text-muted" style="font-size: 0.8rem;">
                                        <i class="bi bi-eye-fill me-1"></i>@(product.Views ?? 0)
                                    </small>
                                </div>
                                @if (!string.IsNullOrEmpty(product.Location))
                                {
                                    <div class="text-muted small mt-2 text-truncate">
                                        <i class="bi bi-geo-alt-fill me-1 text-secondary"></i>@product.Location
                                    </div>
                                }
                            </div>
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="80" class="mb-3 opacity-50" alt="Empty">
                <p class="text-muted">Chưa có sản phẩm nào được đăng bán.</p>
            </div>
        }
    </div>
</div>