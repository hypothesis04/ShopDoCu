@model ShopDoCu.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container my-5">
    <div class="mb-4">
        <h4 class="text-primary mb-1">Chi tiết đơn hàng #@Model.OrderId</h4>
        @if (Model.Status == "Shipping")
        {
            <span class="badge bg-info text-dark">Đang giao hàng</span>
        }
        else if (Model.Status == "Completed")
        {
            <span class="badge bg-success">Giao dịch thành công</span>
        }
         else if (Model.Status == "Pending")
        {
             <span class="badge bg-warning text-dark">Chờ xác nhận</span>
        }
        else if (Model.Status == "Cancelled")
        {
             <span class="badge bg-danger">Đơn hàng đã bị hủy</span>
        }
        else
        {
             <span class="badge bg-secondary">@Model.Status</span>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mb-4">
            <i class="bi bi-heart-fill me-2 text-danger"></i>@TempData["SuccessMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <h6 class="fw-bold text-muted text-uppercase mb-3">Thông tin giao hàng</h6>
                    <div class="alert alert-light border">
                        <i class="bi bi-geo-alt-fill text-danger me-2"></i>
                        <strong>@Model.ShippingAddress</strong>
                    </div>

                    <h6 class="fw-bold text-muted text-uppercase mt-4 mb-3">Thanh toán</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <span class="text-secondary">Hình thức:</span>
                            <span class="fw-bold">@Model.PaymentMethod</span>
                        </li>
                        <li>
                            <span class="text-secondary">Trạng thái:</span>
                            <span class="fw-bold">@Model.Status</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="card shadow-sm border-0">
                <div class="table-responsive">
                    <table class="table mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">Sản phẩm</th>
                                <th class="text-center">SL</th>
                                <th class="text-end">Đơn giá</th>
                                <th class="text-end pe-3">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.OrderDetails)
                            {
                                var img = d.Product?.ProductImages.FirstOrDefault()?.ImageUrl ?? "/images/no-image.jpg";
                                <tr>
                                    <td class="ps-3">
                                        <div class="d-flex align-items-center">
                                            <img src="@img" width="50" height="50" class="rounded me-3 object-fit-cover border">
                                            <div>
                                                <div class="small fw-bold text-dark">@d.Product?.ProductName</div>
                                                <small class="text-muted">ID: @d.ProductId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">@d.Quantity</td>
                                    <td class="text-end">@d.UnitPrice?.ToString("N0")₫</td>
                                    <td class="text-end pe-3 fw-bold">@((d.Quantity * d.UnitPrice)?.ToString("N0"))₫</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold py-3">TỔNG CỘNG:</td>
                                <td class="text-end pe-3 fw-bold text-danger fs-5 py-3">@Model.TotalAmount?.ToString("N0")₫</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

                <div class="d-flex justify-content-end align-items-center gap-2 mt-4 pt-3 border-top">
                    <a href="/Order/MyOrders" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Quay lại
                    </a>

                    @if (Model.Status == "Pending")
                    {
                        <form asp-action="CancelOrder" method="post" onsubmit="return confirm('Bạn chắc chắn muốn hủy đơn hàng này?');">
                            <input type="hidden" name="id" value="@Model.OrderId" />
                            <button type="submit" class="btn btn-danger shadow-sm">
                                <i class="bi bi-x-circle me-2"></i>Hủy đơn hàng
                            </button>
                        </form>
                    }
                    
                    else if (Model.Status == "Shipping")
                    {
                        <form asp-action="ConfirmReceipt" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@Model.OrderId" />
                            <button type="submit" class="btn btn-success fw-bold shadow-sm" onclick="return confirm('Bạn xác nhận đã nhận được hàng và hàng hóa nguyên vẹn?');">
                                <i class="bi bi-check2-circle me-2"></i>Đã nhận được hàng
                            </button>
                        </form>
                    }

                    else if (Model.Status == "Completed")
                    {
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#returnModal">
                            <i class="bi bi-arrow-counterclockwise me-2"></i>Yêu cầu Trả hàng / Hoàn tiền
                        </button>

                        <div class="modal fade" id="returnModal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-action="RequestReturn" method="post">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">Yêu cầu trả hàng</h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <input type="hidden" name="id" value="@Model.OrderId" />
                                            <div class="alert alert-warning small">
                                                <i class="bi bi-info-circle me-1"></i>
                                                Lưu ý: Chỉ chấp nhận trả hàng trong vòng 3 ngày kể từ khi nhận.
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Lý do trả hàng:</label>
                                                <textarea name="reason" class="form-control" rows="3" required placeholder="Ví dụ: Sản phẩm bị vỡ, giao sai mẫu..."></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                            <button type="submit" class="btn btn-danger">Gửi yêu cầu</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    
                    else if (Model.Status == "ReturnRequested")
                    {
                        <span class="text-warning fw-bold"><i class="bi bi-hourglass-split"></i> Đang chờ xử lý trả hàng</span>
                    }
                </div>

              
            </div>
        </div>
    </div>
</div>