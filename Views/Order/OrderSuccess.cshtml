@model Guid
@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="container text-center my-5 py-5">
    <div class="d-inline-block p-4 rounded-circle bg-success text-white mb-3">
        <i class="bi bi-check-lg display-4"></i>
    </div>
    <h2 class="fw-bold text-success">Đặt hàng thành công!</h2>
    <p class="text-muted">Mã đơn hàng: <strong>#@Model</strong></p>
    <div class="mt-4">
        <a href="/Order/MyOrders" class="btn btn-primary">Xem đơn hàng</a>
        <a href="/" class="btn btn-outline-secondary">Về trang chủ</a>
    </div>
</div>