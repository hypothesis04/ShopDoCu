@model IEnumerable<ShopDoCu.Models.Product>
@{
    ViewData["Title"] = "Mua sắm";
    
    // Lấy dữ liệu từ ViewBag
    var categories = ViewBag.Categories as IEnumerable<ShopDoCu.Models.Category>;
    var selectedId = ViewBag.SelectedCategoryId as int?;
    var searchQuery = ViewBag.SearchQuery as string;
    
    // Lấy giá trị lọc giá hiện tại (để hiển thị lại trên form)
    var currentMin = ViewBag.MinPrice as decimal?;
    var currentMax = ViewBag.MaxPrice as decimal?;
}

<div class="container my-4">
    <div class="d-md-none mb-3">
        <form class="d-flex" method="get" action="/Product/Index">
            @if (selectedId != null) { <input type="hidden" name="categoryId" value="@selectedId" /> }
            <input class="form-control me-2" type="search" name="q" placeholder="Tìm kiếm..." value="@searchQuery" />
            <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
        </form>
    </div>

    <div class="row g-4">
        <div class="col-lg-3 d-none d-lg-block">
            
            <div class="card border-0 shadow-sm category-sidebar mb-4">
                <div class="card-header bg-primary text-white fw-bold text-uppercase py-3">
                    <i class="bi bi-list-ul me-2"></i>Danh mục
                </div>
                <div class="list-group list-group-flush">
                    <a href="/Product" class="list-group-item list-group-item-action @(selectedId == null ? "active" : "")">
                        <i class="bi bi-grid-fill me-2"></i>Tất cả sản phẩm
                    </a>

                    @if (categories != null)
                    {
                        foreach (var cat in categories)
                        {
                            var isActive = selectedId == cat.CategoryId;
                            
                            <div class="list-group-item list-group-item-action category-item p-0">
                                <a href="/Product?categoryId=@cat.CategoryId" class="d-flex justify-content-between align-items-center text-decoration-none text-dark w-100 p-3 @(isActive ? "fw-bold text-primary" : "")">
                                    <span>@cat.CategoryName</span>
                                    @if (cat.InverseParent != null && cat.InverseParent.Any())
                                    {
                                        <i class="bi bi-chevron-right small text-muted"></i>
                                    }
                                </a>

                                @if (cat.InverseParent != null && cat.InverseParent.Any())
                                {
                                    <div class="submenu">
                                        <div class="px-3 py-2 text-muted small fw-bold border-bottom bg-light text-uppercase">
                                            @cat.CategoryName
                                        </div>
                                        @foreach (var sub in cat.InverseParent)
                                        {
                                            <a href="/Product?categoryId=@sub.CategoryId">
                                                <i class="bi bi-caret-right-fill me-1 small text-secondary"></i>@sub.CategoryName
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white fw-bold py-3 border-bottom">
                    <i class="bi bi-funnel me-2 text-primary"></i>Lọc theo giá
                </div>
                <div class="card-body">
                    <form method="get" action="/Product/Index">
                        @if (selectedId != null) { <input type="hidden" name="categoryId" value="@selectedId" /> }
                        @if (!string.IsNullOrEmpty(searchQuery)) { <input type="hidden" name="q" value="@searchQuery" /> }

                        <div class="mb-3">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="priceAll" checked onclick="setPrice('', '')">
                                <label class="form-check-label cursor-pointer" for="priceAll">Tất cả</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="priceU5" onclick="setPrice(0, 5000000)">
                                <label class="form-check-label cursor-pointer" for="priceU5">Dưới 5 triệu</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="price5to10" onclick="setPrice(5000000, 10000000)">
                                <label class="form-check-label cursor-pointer" for="price5to10">5 - 10 triệu</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="price10to20" onclick="setPrice(10000000, 20000000)">
                                <label class="form-check-label cursor-pointer" for="price10to20">10 - 20 triệu</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="priceOver20" onclick="setPrice(20000000, '')">
                                <label class="form-check-label cursor-pointer" for="priceOver20">Trên 20 triệu</label>
                            </div>
                        </div>

                        <label class="form-label small fw-bold text-muted">Hoặc nhập khoảng giá:</label>
                        <div class="d-flex align-items-center mb-3">
                            <input type="number" class="form-control form-control-sm me-1" name="minPrice" id="minPriceInput" placeholder="Từ" value="@currentMin" min="0">
                            <span class="text-muted">-</span>
                            <input type="number" class="form-control form-control-sm ms-1" name="maxPrice" id="maxPriceInput" placeholder="Đến" value="@currentMax" min="0">
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm w-100 fw-bold">Áp dụng</button>
                    </form>
                </div>
            </div>

        </div>

        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4 bg-white p-3 rounded shadow-sm border">
                <h5 class="mb-0 fw-bold text-primary">
                    @if (!string.IsNullOrEmpty(searchQuery)) { <span>Kết quả tìm kiếm: "@searchQuery"</span> }
                    else { <span>Danh sách sản phẩm</span> }
                </h5>
                
                <form class="d-none d-md-flex" method="get" action="/Product/Index" style="width: 300px;">
                    @if (selectedId != null) { <input type="hidden" name="categoryId" value="@selectedId" /> }
                    @if (currentMin != null) { <input type="hidden" name="minPrice" value="@currentMin" /> }
                    @if (currentMax != null) { <input type="hidden" name="maxPrice" value="@currentMax" /> }
                    
                    <div class="input-group">
                        <input class="form-control border-end-0" type="search" name="q" placeholder="Tìm tên sản phẩm..." value="@searchQuery" />
                        <button class="btn btn-outline-secondary border-start-0" type="submit"><i class="bi bi-search"></i></button>
                    </div>
                </form>
            </div>

            <div class="row g-3">
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        var mainImage = product.ProductImages?.FirstOrDefault(img => img.IsMain == true) ?? product.ProductImages?.FirstOrDefault();
                        var imageUrl = mainImage?.ImageUrl ?? "/images/no-image.jpg";
                        
                        <div class="col-6 col-md-4">
                            <div class="card product-card h-100 border bg-white">
                                <a href="/Product/Details/@product.ProductId" class="text-decoration-none text-dark">
                            
                                    <div class="product-image-wrapper position-relative bg-white border-bottom" style="height: 200px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                        <img src="@imageUrl" alt="@product.ProductName" 
                                            style="width: 100%; height: 100%; object-fit: contain; padding: 15px; transition: transform 0.3s ease;" 
                                            onerror="this.src='/images/no-image.jpg'" />
                                        
                                        @if (product.IsNew == true)
                                        {
                                            <span class="badge bg-success position-absolute top-0 start-0 m-2 shadow-sm">New</span>
                                        }
                                        @if (product.Quantity <= 0)
                                        {
                                            <span class="badge bg-secondary position-absolute top-0 end-0 m-2 shadow-sm">Hết hàng</span>
                                        }
                                    </div>

                                    <div class="card-body p-3">
                                        <h6 class="card-title product-name fw-bold mb-2 text-dark">@product.ProductName</h6>
                                        <div class="d-flex justify-content-between align-items-end mt-3">
                                            <div class="text-danger fw-bold fs-5">@product.Price.ToString("N0")₫</div>
                                            @if (product.Views > 0)
                                            {
                                                <small class="text-muted" style="font-size: 0.8rem;"><i class="bi bi-eye-fill me-1"></i>@product.Views</small>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(product.Location))
                                        {
                                            <div class="text-muted small mt-2 text-truncate">
                                                <i class="bi bi-geo-alt-fill me-1 text-secondary"></i>@product.Location
                                            </div>
                                        }
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="100" class="mb-3 opacity-50" alt="Empty">
                        <h5 class="text-muted">Không tìm thấy sản phẩm nào!</h5>
                        <p class="text-muted">Vui lòng thử tìm từ khóa khác hoặc xóa bộ lọc.</p>
                        <a href="/Product" class="btn btn-outline-primary mt-2">Xem tất cả sản phẩm</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Hàm JS để điền giá vào ô input khi chọn Radio Button
    function setPrice(min, max) {
        document.getElementById('minPriceInput').value = min;
        document.getElementById('maxPriceInput').value = max;
    }
</script>