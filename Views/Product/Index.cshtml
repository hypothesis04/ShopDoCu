@model IEnumerable<ShopDoCu.Models.Product>
@{
    ViewData["Title"] = "Mua sắm";
    var categories = ViewBag.Categories as IEnumerable<ShopDoCu.Models.Category>;
    var selectedId = ViewBag.SelectedCategoryId as int?;
}

<div class="container my-4">
    <div class="d-md-none mb-3">
        <form class="d-flex" method="get" action="/Product/TimKiem">
            <input class="form-control me-2" type="search" name="q" placeholder="Tìm kiếm..." value="@ViewBag.SearchQuery" />
            <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
        </form>
    </div>

    <div class="row">
        <div class="col-lg-3 d-none d-lg-block">
            <div class="card border-0 shadow-sm category-sidebar">
                <div class="card-header bg-primary text-white fw-bold text-uppercase py-3">
                    <i class="bi bi-list-ul me-2"></i>Danh mục
                </div>
                <div class="list-group list-group-flush">
                    <a href="/Product" class="list-group-item list-group-item-action @(selectedId == null ? "active" : "")">
                        <i class="bi bi-grid-fill me-2"></i>Tất cả sản phẩm
                    </a>

                    @if (categories != null)
                    {
                        foreach (var cat in categories)
                        {
                            var isActive = selectedId == cat.CategoryId;
                            // Class 'category-item' để kích hoạt hover CSS
                            <div class="list-group-item list-group-item-action category-item p-0">
                                
                                <a href="/Product?categoryId=@cat.CategoryId" class="d-flex justify-content-between align-items-center text-decoration-none text-dark w-100 p-3 @(isActive ? "fw-bold text-primary" : "")">
                                    <span>@cat.CategoryName</span>
                                    @if (cat.InverseParent != null && cat.InverseParent.Any())
                                    {
                                        <i class="bi bi-chevron-right small text-muted"></i>
                                    }
                                </a>

                                @if (cat.InverseParent != null && cat.InverseParent.Any())
                                {
                                    <div class="submenu">
                                        <div class="px-3 py-2 text-muted small fw-bold border-bottom bg-light text-uppercase">
                                            @cat.CategoryName
                                        </div>
                                        @foreach (var sub in cat.InverseParent)
                                        {
                                            <a href="/Product?categoryId=@sub.CategoryId">
                                                <i class="bi bi-caret-right-fill me-1 small text-secondary"></i>@sub.CategoryName
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4 bg-white p-3 rounded shadow-sm border">
                <h5 class="mb-0 fw-bold text-primary">
                    @if (ViewBag.SearchQuery != null) { <span>Kết quả tìm kiếm: "@ViewBag.SearchQuery"</span> }
                    else { <span>Danh sách sản phẩm</span> }
                </h5>
                <form class="d-none d-md-flex" method="get" action="/Product/TimKiem" style="width: 300px;">
                    <div class="input-group">
                        <input class="form-control border-end-0" type="search" name="q" placeholder="Tìm sản phẩm..." value="@ViewBag.SearchQuery" />
                        <button class="btn btn-outline-secondary border-start-0" type="submit"><i class="bi bi-search"></i></button>
                    </div>
                </form>
            </div>

            <div class="row g-3">
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        var mainImage = product.ProductImages?.FirstOrDefault(img => img.IsMain == true) ?? product.ProductImages?.FirstOrDefault();
                        var imageUrl = mainImage?.ImageUrl ?? "/images/no-image.jpg";
                        
                        <div class="col-6 col-md-4">
                            <div class="card product-card h-100 border bg-white">
                                <a href="/Product/Details/@product.ProductId" class="text-decoration-none text-dark">
                                    <div class="product-image-wrapper position-relative">
                                        <img src="@imageUrl" alt="@product.ProductName" class="product-image" onerror="this.src='/images/no-image.jpg'" />
                                        
                                        @if (product.IsNew == true)
                                        {
                                            <span class="badge bg-success position-absolute top-0 start-0 m-2 shadow-sm">New</span>
                                        }
                                        @if (product.Quantity <= 0)
                                        {
                                            <span class="badge bg-secondary position-absolute top-0 end-0 m-2 shadow-sm">Hết hàng</span>
                                        }
                                    </div>

                                    <div class="card-body p-3">
                                        <h6 class="card-title product-name fw-bold mb-2 text-dark">@product.ProductName</h6>
                                        <div class="d-flex justify-content-between align-items-end mt-3">
                                            <div class="text-danger fw-bold fs-5">@product.Price.ToString("N0")₫</div>
                                            @if (product.Views > 0)
                                            {
                                                <small class="text-muted" style="font-size: 0.8rem;"><i class="bi bi-eye-fill me-1"></i>@product.Views</small>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(product.Location))
                                        {
                                            <div class="text-muted small mt-2 text-truncate">
                                                <i class="bi bi-geo-alt-fill me-1 text-secondary"></i>@product.Location
                                            </div>
                                        }
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="100" class="mb-3 opacity-50" alt="Empty">
                            <h5 class="text-muted">Không tìm thấy sản phẩm nào!</h5>
                            <a href="/Product" class="btn btn-outline-primary mt-2">Xem tất cả sản phẩm</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>