@model ShopDoCu.Models.Coupon
@{
    // Tự động nhận diện Layout: Nếu đường dẫn có chữ "Admin" thì dùng layout Admin, ngược lại dùng layout Seller
    bool isAdmin = Context.Request.Path.Value.Contains("Admin");
    Layout = isAdmin ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Tạo mã giảm giá mới";
}

<div class="container my-4" style="max-width: 700px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0 fw-bold"><i class="bi bi-ticket-perforated me-2"></i>Tạo mã giảm giá mới</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="CreateCoupon" method="post">
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Mã Code (Ví dụ: SALE100K)</label>
                    <input asp-for="Code" class="form-control text-uppercase fw-bold" placeholder="Nhập mã không dấu..." required />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Loại giảm giá</label>
                        <select asp-for="DiscountType" class="form-select">
                            <option value="Fixed">Trừ tiền trực tiếp (VNĐ)</option>
                            <option value="Percent">Trừ theo phần trăm (%)</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Giá trị giảm</label>
                        <div class="input-group">
                            <input asp-for="DiscountValue" type="number" class="form-control" required placeholder="Nhập số tiền hoặc %" />
                            <span class="input-group-text">VNĐ / %</span>
                        </div>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Số lượng phát hành</label>
                        <input asp-for="Quantity" type="number" class="form-control" value="100" min="1" required />
                    </div>
                    
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Đơn hàng tối thiểu (VNĐ)</label>
                        <input asp-for="MinOrderAmount" type="number" class="form-control" value="0" min="0" />
                        <div class="form-text small fst-italic text-muted">Để 0 nếu áp dụng cho mọi đơn hàng.</div>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Ngày bắt đầu</label>
                        <input asp-for="StartDate" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Ngày kết thúc</label>
                        <input asp-for="EndDate" type="datetime-local" class="form-control" required />
                    </div>
                </div>

                <div class="mb-4 p-3 bg-light rounded border">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                        <label class="form-check-label fw-bold ms-2" for="IsActive">Kích hoạt ngay sau khi tạo</label>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 border-top pt-3">
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">Hủy bỏ</a>
                    <button type="submit" class="btn btn-primary px-4 fw-bold shadow-sm">Hoàn tất & Tạo mã</button>
                </div>
            </form>
        </div>
    </div>
</div>