@model ShopDoCu.Views.Product.ProductCreateViewModel
@{
    ViewData["Title"] = "Đăng bán sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12" id="create-product-container">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="fw-bold mb-0 text-primary"><i class="bi bi-plus-circle me-2"></i>Đăng bán sản phẩm mới</h5>
                </div>
                <div class="card-body p-4">
                    
                    <form asp-action="CreateProduct" asp-controller="SellerChannel" method="post" enctype="multipart/form-data" id="create-product-form">
                        
                        <div class="row mb-3">
                            <div class="col-md-12 mb-3">
                                <label class="form-label fw-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                                <input asp-for="ProductName" class="form-control" placeholder="Ví dụ: iPhone 12 Pro Max cũ..." required />
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Danh mục chính <span class="text-danger">*</span></label>
                                <select asp-for="ParentCategoryId" class="form-select" id="parentCategory" asp-items="@(new SelectList(ViewBag.ParentCategories, "CategoryId", "CategoryName"))" required>
                                    <option value="">-- Chọn danh mục --</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Chi tiết <span class="text-danger">*</span></label>
                                <select asp-for="CategoryId" class="form-select" id="childCategory" disabled required>
                                    <option value="">-- Chọn danh mục cha trước --</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giá bán (VNĐ) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input asp-for="Price" type="number" class="form-control" placeholder="0" required min="1000" />
                                    <span class="input-group-text">₫</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số lượng <span class="text-danger">*</span></label>
                                <input asp-for="Quantity" type="number" class="form-control" value="1" min="1" required />
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                             <div class="col-md-6">
                                <label class="form-label fw-bold">Tình trạng</label>
                                <div class="form-check form-switch border rounded p-2 ps-5">
                                    <input class="form-check-input" type="checkbox" asp-for="IsNew" style="transform: scale(1.3);">
                                    <label class="form-check-label ms-2">Hàng mới (New)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Khu vực bán</label>
                                <input asp-for="Location" class="form-control" placeholder="VD: TP.HCM" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mô tả chi tiết</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Thông số kỹ thuật</label>
                            <div id="specifications-list"></div>
                            <button type="button" class="btn btn-outline-primary btn-sm mt-2" id="add-spec-btn">
                                <i class="bi bi-plus-lg"></i> Thêm thông số
                            </button>
                            <input type="hidden" name="Specifications" id="specifications-json" />
                            <small class="text-muted d-block mt-1">Bạn có thể thêm nhiều thông số phù hợp với sản phẩm.</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Hình ảnh (Tối thiểu 3)</label>
                            <div class="border border-dashed rounded p-3 text-center bg-light">
                                <input type="file" name="ProductImages" class="form-control mb-3" multiple accept="image/*" id="imageInput" required />
                                <div id="imagePreview" class="row g-2"></div>
                            </div>
                            
                            <div class="mt-3">
                                <label class="form-label fw-bold">Chọn ảnh đại diện (Ảnh bìa)</label>
                                <select asp-for="MainImageIndex" id="mainImageSelect" class="form-select">
                                    <option value="0">-- Vui lòng tải ảnh lên trước --</option>
                                </select>
                                <small class="text-muted"><i class="bi bi-info-circle me-1"></i>Ảnh được chọn sẽ hiển thị đầu tiên.</small>
                            </div>
                        </div>
                        
                        <div id="form-error-msg" class="alert alert-danger d-none"></div>

                        <div class="d-flex justify-content-end gap-2 border-top pt-3">
                            <a href="/SellerChannel/MyProducts" class="btn btn-light">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary px-4 fw-bold">
                                <i class="bi bi-send-fill me-1"></i> Đăng bán ngay
                            </button>
                        </div>
                    </form>

                    @section Scripts {
                        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                        <script>
                            // Chỉ giữ lại hàm thêm dòng, còn lại site.js sẽ tự xử lý
                            function addSpecRow(key = '', value = '') {
                                const row = $(
                                    `<div class='input-group mb-2 spec-row'>
                                        <input type='text' class='form-control' placeholder='Tên thông số' value='${key}' />
                                        <input type='text' class='form-control' placeholder='Mô tả' value='${value}' />
                                        <button type='button' class='btn btn-danger remove-spec-btn'><i class='bi bi-x'></i></button>
                                    </div>`
                                );
                                row.find('.remove-spec-btn').click(function() {
                                    row.remove();
                                });
                                $('#specifications-list').append(row);
                            }

                            // Sự kiện nút Thêm thông số
                            $('#add-spec-btn').click(function() {
                                addSpecRow();
                            });
                        </script>
                    }
                </div>
            </div>
        </div>
    </div>
</div>