@model IEnumerable<ShopDoCu.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentCategoryId = ViewBag.SelectedCategoryId as int?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold">Sản phẩm của Shop</h4>
    <a href="/SellerChannel/CreateProduct" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Đăng sản phẩm mới
    </a>
</div>

<div class="row g-3 mb-4">
    <div class="col-lg-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white fw-bold py-3">Danh mục</div>
            <div class="list-group list-group-flush small">
                <a href="/SellerChannel/MyProducts" class="list-group-item list-group-item-action @(currentCategoryId == null ? "active fw-bold" : "")">
                    <i class="bi bi-grid me-2"></i>Tất cả
                </a>
                @foreach (var cat in ViewBag.Categories)
                {
                    <a href="?categoryId=@cat.CategoryId" class="list-group-item list-group-item-action @(currentCategoryId == cat.CategoryId ? "active fw-bold" : "")">
                        @cat.CategoryName
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-9">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body p-2">
                <form method="get" class="d-flex gap-2">
                    <input type="hidden" name="categoryId" value="@currentCategoryId" />
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="search" class="form-control border-start-0 ps-0" placeholder="Tìm theo tên sản phẩm..." value="@ViewBag.Search">
                    </div>
                    <select name="status" class="form-select w-auto" onchange="this.form.submit()">
                        <option value="">Tất cả trạng thái</option>
                        <option value="Active" selected="@(ViewBag.Status == "Active")">Đang bán</option>
                        <option value="SoldOut" selected="@(ViewBag.Status == "SoldOut")">Hết hàng</option>
                        <option value="Pending" selected="@(ViewBag.Status == "Pending")">Chờ duyệt</option>
                    </select>
                </form>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table align-middle mb-0 table-hover">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-3 py-3">Sản phẩm</th>
                            <th>Giá bán</th>
                            <th>Kho</th>
                            <th>Trạng thái</th>
                            <th class="text-end pe-3">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-box2 fs-1 d-block mb-2 opacity-50"></i>
                                    Chưa có sản phẩm nào
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var product in Model)
                            {
                                var imgUrl = product.ProductImages?.FirstOrDefault()?.ImageUrl ?? "https://placehold.co/50";
                                <tr>
                                    <td class="ps-3">
                                        <div class="d-flex align-items-center">
                                            <img src="@imgUrl" class="rounded border" style="width: 48px; height: 48px; object-fit: cover;">
                                            <div class="ms-3">
                                                <div class="fw-bold text-dark text-truncate" style="max-width: 200px;">@product.ProductName</div>
                                                <small class="text-muted">@product.Category?.CategoryName</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="fw-bold text-primary">@product.Price.ToString("N0")₫</td>
                                    <td>
                                        @if(product.Quantity > 0) { <span>@product.Quantity</span> }
                                        else { <span class="text-danger fw-bold">0</span> }
                                    </td>
                                    <td>
                                        @if (product.Status == "Active") { <span class="badge bg-success bg-opacity-10 text-success px-2 py-1">Đang bán</span> }
                                        else if (product.Status == "Pending") { <span class="badge bg-warning bg-opacity-10 text-warning px-2 py-1">Chờ duyệt</span> }
                                        else if (product.Status == "SoldOut" || product.Quantity == 0) { <span class="badge bg-secondary bg-opacity-10 text-secondary px-2 py-1">Hết hàng</span> }
                                        else if (product.Status == "Locked") { <span class="badge bg-danger bg-opacity-10 text-danger px-2 py-1">Đã khóa</span> }
                                        else { <span class="badge bg-light text-dark border">@product.Status</span> }
                                    </td>
                                    <td class="text-end pe-3">
                                        <a href="/SellerChannel/EditProduct/@product.ProductId" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a href="/Product/Details/@product.ProductId" class="btn btn-sm btn-light text-secondary ms-1" title="Xem trên web" target="_blank">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>