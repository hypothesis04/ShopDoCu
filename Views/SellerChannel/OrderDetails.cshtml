@model ShopDoCu.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.OrderId;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="/SellerChannel/ManageOrders" class="btn btn-outline-secondary rounded-pill px-4 fw-bold">
            <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
        </a>
        <h4 class="fw-bold text-primary m-0">Đơn hàng #@Model.OrderId</h4>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success shadow-sm rounded-3 border-0 mb-4"><i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger shadow-sm rounded-3 border-0 mb-4"><i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]</div>
    }

    <div class="row g-4">
        <div class="col-lg-8">

            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="fw-bold m-0 text-primary text-uppercase"><i class="bi bi-basket-fill me-2"></i>Sản phẩm đặt mua</h6>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0 align-middle">
                        <thead class="bg-light text-secondary small text-uppercase">
                            <tr>
                                <th class="ps-4 py-3">Sản phẩm</th>
                                <th class="text-center">SL</th>
                                <th class="text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                var img = item.Product?.ProductImages.FirstOrDefault()?.ImageUrl ?? "/images/no-image.jpg";
                                <tr>
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <img src="@img" width="60" height="60" class="rounded-3 border me-3 object-fit-cover shadow-sm">
                                            <div>
                                                <div class="fw-bold text-dark mb-1">@item.Product?.ProductName</div>
                                                <div class="small text-muted bg-light px-2 py-1 rounded d-inline-block border">
                                                    Đơn giá: <span class="fw-bold text-dark">@item.UnitPrice?.ToString("N0")₫</span>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary rounded-pill px-3">x @item.Quantity</span>
                                    </td>
                                    <td class="text-end fw-bold text-primary pe-4">@((item.UnitPrice * item.Quantity)?.ToString("N0") ?? "0")₫</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            @if (Model.DiscountAmount > 0)
                            {
                                <tr>
                                    <td colspan="2" class="text-end py-2 text-muted small">Tổng tiền hàng:</td>
                                    <td class="text-end pe-4 py-2 text-muted">@((Model.Subtotal + Model.ShippingFee).ToString("N0"))₫</td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-end py-2 text-success small fw-bold">
                                        <i class="bi bi-ticket-perforated-fill me-1"></i>Voucher giảm giá:
                                    </td>
                                    <td class="text-end pe-4 py-2 text-success fw-bold">-@Model.DiscountAmount.ToString("N0")₫</td>
                                </tr>
                            }

                            <tr class="border-top border-2">
                                <td colspan="2" class="text-end fw-bold py-3 text-uppercase text-dark">Tổng thanh toán:</td>
                                <td class="text-end fw-bold text-danger fs-4 pe-4 py-3">@Model.TotalAmount?.ToString("N0")₫</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="fw-bold m-0 text-dark text-uppercase"><i class="bi bi-info-circle-fill me-2"></i>Thông tin đơn hàng</h6>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6 border-end">
                            <label class="fw-bold text-secondary small text-uppercase mb-2">Người nhận hàng</label>
                            <div class="d-flex align-items-center mb-2">
                                <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-2"><i class="bi bi-person-fill"></i></div>
                                <div>
                                    <div class="fw-bold text-dark">@Model.ReceiverName</div>
                                    <div class="small text-muted">@Model.ReceiverPhone</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="fw-bold text-secondary small text-uppercase mb-2">Thời gian đặt</label>
                            <div class="d-flex align-items-center">
                                <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-2 me-2"><i class="bi bi-calendar-event-fill"></i></div>
                                <div>
                                    <div class="fw-bold text-dark">@Model.OrderDate?.ToString("dd/MM/yyyy")</div>
                                    <div class="small text-muted">Lúc @Model.OrderDate?.ToString("HH:mm")</div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-0 opacity-25">

                        <div class="col-md-6 border-end">
                            <label class="fw-bold text-secondary small text-uppercase mb-2">Thanh toán</label>
                            <div class="mb-2">
                                <span class="badge @(Model.PaymentMethod == "COD" ? "bg-secondary" : "bg-primary") rounded-pill px-3 py-2">
                                    <i class="bi @(Model.PaymentMethod == "COD" ? "bi-cash" : "bi-credit-card-2-front") me-2"></i>
                                    @Model.PaymentMethod
                                </span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="fw-bold text-secondary small text-uppercase mb-2">Địa chỉ giao hàng</label>
                            <div class="alert alert-light border border-dashed text-dark m-0 p-3 rounded-3">
                                <div class="d-flex">
                                    <i class="bi bi-geo-alt-fill text-danger me-2 mt-1"></i>
                                    <span>@Model.ShippingAddress</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 sticky-top bg-light" style="top: 20px;">
                <div class="card-body p-4">
                    <h6 class="fw-bold text-uppercase text-secondary mb-3 text-center">Trạng thái đơn hàng</h6>

                    <div class="mb-4 text-center">
                        @if (Model.Status == "Pending")
                        {
                            <div class="display-6 text-warning mb-2"><i class="bi bi-hourglass-split"></i></div>
                            <span class="badge bg-warning text-dark fs-6 py-2 px-4 rounded-pill shadow-sm">CHỜ XÁC NHẬN</span>
                        }
                        else if (Model.Status == "Shipping")
                        {
                            <div class="display-6 text-primary mb-2"><i class="bi bi-truck"></i></div>
                            <span class="badge bg-primary fs-6 py-2 px-4 rounded-pill shadow-sm">ĐANG GIAO HÀNG</span>
                        }
                        else if (Model.Status == "Completed")
                        {
                            <div class="display-6 text-success mb-2"><i class="bi bi-check-circle-fill"></i></div>
                            <span class="badge bg-success fs-6 py-2 px-4 rounded-pill shadow-sm">HOÀN THÀNH</span>
                        }
                        else if (Model.Status == "Cancelled")
                        {
                            <div class="display-6 text-danger mb-2"><i class="bi bi-x-circle-fill"></i></div>
                            <span class="badge bg-danger fs-6 py-2 px-4 rounded-pill shadow-sm">ĐÃ HỦY</span>
                        }
                        else if (Model.Status == "ReturnRequested")
                        {
                            <div class="display-6 text-danger mb-2"><i class="bi bi-arrow-return-left"></i></div>
                            <span class="badge bg-danger fs-6 py-2 px-4 rounded-pill shadow-sm">YÊU CẦU TRẢ HÀNG</span>
                        }
                        else if (Model.Status == "Returned")
                        {
                            <div class="display-6 text-secondary mb-2"><i class="bi bi-box-seam"></i></div>
                            <span class="badge bg-secondary fs-6 py-2 px-4 rounded-pill shadow-sm">ĐÃ TRẢ HÀNG</span>
                        }
                    </div>

                    <div class="border-top pt-3">
                        <form asp-action="UpdateOrderStatus" asp-controller="SellerChannel" method="post">
                            <input type="hidden" name="id" value="@Model.OrderId" />

                            @if (Model.Status == "Pending")
                            {
                                <button type="submit" name="status" value="Shipping" class="btn btn-primary w-100 mb-2 py-3 fw-bold shadow-sm rounded-3">
                                    <i class="bi bi-check-lg me-2"></i>Xác nhận & Giao hàng
                                </button>
                                <button type="submit" name="status" value="Cancelled" class="btn btn-white border w-100 py-2 text-danger fw-bold" onclick="return confirm('Bạn chắc chắn muốn hủy đơn này?');">
                                    <i class="bi bi-x-lg me-2"></i>Hủy đơn hàng
                                </button>
                            }

                            @if (Model.Status == "Shipping")
                            {
                                <div class="alert alert-info border-0 shadow-sm bg-info-subtle text-info-emphasis rounded-3 p-3 mb-3">
                                    <div class="d-flex">
                                        <i class="bi bi-info-circle-fill fs-4 me-3 mt-1"></i>
                                        <div class="small">
                                            <strong>Đang vận chuyển...</strong><br />
                                            Hãy liên hệ với đơn vị vận chuyển để giao hàng cho khách. Tiền sẽ về ví sau khi khách xác nhận.
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" name="status" value="Cancelled" class="btn btn-outline-danger w-100 py-2 small" onclick="return confirm('Giao thất bại? Đơn sẽ bị hủy.');">
                                    Báo giao thất bại / Hủy
                                </button>
                            }

                            @if (Model.Status == "ReturnRequested")
                            {
                                <div class="p-3 bg-warning bg-opacity-10 border border-warning rounded-3 mb-3">
                                    <h6 class="fw-bold text-warning mb-2"><i class="bi bi-exclamation-triangle-fill me-2"></i>Yêu cầu trả hàng</h6>
                                    <p class="small mb-0 text-muted">Khách hàng báo sản phẩm có vấn đề. Bạn có đồng ý nhận lại hàng không?</p>
                                </div>
                                <button type="submit" name="status" value="Returned" class="btn btn-danger w-100 mb-2 py-2 fw-bold shadow-sm" onclick="return confirm('Xác nhận nhận lại hàng? Kho sẽ được cộng lại.');">
                                    <i class="bi bi-arrow-return-left me-2"></i>Đồng ý nhận lại
                                </button>
                                <button type="submit" name="status" value="ReturnRejected" class="btn btn-outline-secondary w-100 py-2" onclick="return confirm('Từ chối yêu cầu này? Đơn hàng sẽ giữ nguyên là Đã giao.');">
                                    Từ chối yêu cầu
                                </button>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>