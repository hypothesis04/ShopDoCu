@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" asp-append-version="true" />
</head>

<body class="admin-page">
   
    <div class="admin-sidebar">
        <div class="admin-sidebar-header">
            <h4><i class="bi bi-shield-check me-2"></i>Admin Panel</h4>
            <p>Quản trị hệ thống</p>
        </div>
        <ul class="admin-menu">
            <li class="admin-menu-item">
                <a href="/Admin" class="admin-menu-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="admin-menu-item">
                <a href="/Admin/Products" class="admin-menu-link">
                    <i class="bi bi-box-seam"></i>
                    <span>Quản lý sản phẩm</span>
                </a>
            </li>
            <li class="admin-menu-item">
                <a href="/Admin/Users" class="admin-menu-link">
                    <i class="bi bi-people"></i>
                    <span>Quản lý người dùng</span>
                </a>
            </li>
            <li class="admin-menu-item">
                <a href="/Admin/Orders" class="admin-menu-link">
                    <i class="bi bi-cart-check"></i>
                    <span>Quản lý đơn hàng</span>
                </a>
            </li>
            <li class="admin-menu-item">
                <a href="/Admin/Categories" class="admin-menu-link">
                    <i class="bi bi-tags"></i>
                    <span>Quản lý danh mục</span>
                </a>
            </li>
            <li class="admin-menu-item">
                <a href="/Admin" class="admin-menu-link">
                    <i class="bi bi-star"></i>
                    <span>Đánh giá & Bình luận</span>
                </a>
            </li>
            <li class="admin-menu-item">
                <a href="/Admin" class="admin-menu-link">
                    <i class="bi bi-graph-up"></i>
                    <span>Thống kê & Báo cáo</span>
                </a>
            </li>
            <li class="admin-menu-item">
                <a href="/Admin" class="admin-menu-link">
                    <i class="bi bi-gear"></i>
                    <span>Cài đặt hệ thống</span>
                </a>
            </li>
            <li class="admin-menu-item">
                <a href="/" class="admin-menu-link">
                    <i class="bi bi-house"></i>
                    <span>Về trang chủ</span>
                </a>
            </li>
            <li class="admin-menu-item">
                <a href="/Account/Logout" class="admin-menu-link text-danger">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Đăng xuất</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Nội dung chính -->
    <div class="admin-content">
        <!-- Top bar -->
         @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <!-- Sidebar menu -->
        <div class="admin-topbar">
            <h2>@ViewData["Title"]</h2>
            <div class="d-flex align-items-center">
                <!-- User Info -->
                <div class="admin-user-info">
                    @if (HttpContextAccessor.HttpContext?.Session.GetString("UserName") != null)
                    {
                        var avatarUrl = HttpContextAccessor.HttpContext.Session.GetString("AvatarUrl") ?? "/images/default-avatar.png";
                        <img src="@avatarUrl" alt="Avatar" />
                        <div>
                            <div style="font-weight: 600; color: #1e293b;">@HttpContextAccessor.HttpContext.Session.GetString("UserName")</div>
                            <div style="font-size: 0.85rem; color: #64748b;">Administrator</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Main content -->
        <div class="admin-main">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

