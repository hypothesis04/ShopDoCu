@using Microsoft.AspNetCore.Http
@using Microsoft.EntityFrameworkCore
@inject IHttpContextAccessor HttpContextAccessor
@inject ShopDoCu.Models.ChoBanDoCuContext _context

@{
    // Lấy thông tin session
    var isLoggedIn = HttpContextAccessor.HttpContext?.Session?.GetString("UserName") != null;
    var userRole = isLoggedIn ? HttpContextAccessor.HttpContext?.Session?.GetString("Role") ?? string.Empty : string.Empty;
    var userName = isLoggedIn ? HttpContextAccessor.HttpContext?.Session?.GetString("UserName") ?? string.Empty : string.Empty;
    var avatarUrl = isLoggedIn ? HttpContextAccessor.HttpContext?.Session?.GetString("AvatarUrl") ?? string.Empty : string.Empty;
     var layoutCategories = _context.Categories
    .Where(c => c.ParentId == null)
    .OrderBy(c => c.CategoryName)
    .ToList();
    // --- LOGIC TÍNH SỐ LƯỢNG GIỎ HÀNG ---
    int cartCount = 0;
    int buyerNotif = 0;  // Thông báo cho Người mua (Đơn đang giao/Chờ duyệt)
    int sellerNotif = 0; // Thông báo cho Người bán (Đơn mới/Yêu cầu trả hàng)
    if (isLoggedIn)
    {
        var userId = HttpContextAccessor.HttpContext?.Session?.GetInt32("UserId");
        if (userId != null)
        {
            try
            {
                cartCount = _context.Carts
                    .Where(c => c.UserId == userId)
                    .Sum(c => c.Quantity ?? 0);
                // 2. Đếm thông báo Người Mua (Đơn đang chờ xác nhận HOẶC Đang giao)
                buyerNotif = _context.Orders
                            .Count(o => o.UserId == userId && (o.Status == "Pending" || o.Status == "Shipping"));

                // 3. Đếm thông báo Chủ Shop (Đơn chờ duyệt HOẶC Yêu cầu trả hàng)
                if (userRole == "Seller")
                {
                    sellerNotif = _context.Orders
                                .Count(o => o.SellerId == userId && (o.Status == "Pending" || o.Status == "ReturnRequested"));
                }
            }
            catch {  }
        }

    }
   
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chợ Bán Đồ Cũ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="site-body">
    <div class="topbar py-2">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex gap-3">
                <span><i class="bi bi-shield-check me-1"></i>Giao dịch an toàn</span>
                <span><i class="bi bi-lightning-charge me-1"></i>Mua nhanh - Bán gọn</span>
            </div>
            <div class="d-flex gap-3">
                <a class="text-decoration-none text-white-50" href=""><i class="bi bi-telephone me-1"></i>Hỗ trợ</a>

                @if (isLoggedIn && userRole != "Admin" && userRole != "Seller")
                {
                    // Chỉ hiện nút đăng ký bán hàng nếu chưa phải là Seller
                    <a class="text-decoration-none text-white-50" href="/Account/SellerRegistration" onclick="handleSmoothScroll(event, 'registration-container')"><i class="bi bi-person-plus me-1"></i>Tham gia bán hàng</a>
                }
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm sticky-top">
        <div class="container">
            <div class="hero-logo-modern">
                <a href="/" class="icon-wrapper">
                    <i class="bi bi-handbag-fill" href="/"></i>
                </a>
                <div class="text-content">
                    <div class="brand-main">CHỢ ĐỒ CŨ</div>
                    <div class="brand-tagline">Cũ người mới ta • Mua bán thả ga</div>
                </div>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Product">Sản phẩm</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-tags me-1"></i>Danh mục
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                          @if (layoutCategories != null && layoutCategories.Any())
                                {
                                    foreach (var cat in layoutCategories)
                                    {
                                        <li><a class="dropdown-item" href="/Product?categoryId=@cat.CategoryId">@cat.CategoryName</a></li>
                                    }
                                }
                        </ul>
                    </li>
                </ul>

                <form class="d-flex me-lg-3 mt-3 mt-lg-0" role="search" action="/Product/Index" method="get">
                    <input class="form-control me-2" type="search" placeholder="Tìm đồ cũ tiết kiệm..." name="q" />
                    <button class="btn btn-light" type="submit"><i class="bi bi-search text-primary"></i></button>
                </form>

                <ul class="navbar-nav align-items-center ms-lg-3">
                    @if (isLoggedIn)
                    {

                        @if (userRole == "Seller")
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link btn btn-outline-warning border-0 text-warning fw-bold position-relative"
                                   href="/SellerChannel"
                                   title="Vào Kênh Quản Lý Cửa Hàng">
                                    <i class="bi bi-shop-window fs-5 me-1"></i>My Shop 
                                    @if (sellerNotif > 0)
                                        {
                                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-light">
                                                @sellerNotif
                                            </span>
                                        }
                                </a>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center position-relative" href="#" role="button" data-bs-toggle="dropdown" id="userAvatar">
                                <img src="@avatarUrl" alt="Avatar" class="avatar me-2" />
                                @userName
                                @if (buyerNotif > 0)
                                    {
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger border border-light mt-2 ms-n1" style="font-size: 0.6rem;">
                                            @buyerNotif
                                        </span>
                                    }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-person-circle me-2"></i>Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item py-2 d-flex justify-content-between align-items-center" href="/Order/MyOrders">
                                        <span><i class="bi bi-bag-check me-2"></i>Đơn hàng của tôi</span>
                                        @if (buyerNotif > 0)
                                        {
                                            <span class="badge rounded-pill bg-danger">@buyerNotif</span>
                                        }
                                    </a></li>

                                <li><a class="dropdown-item" href="/UserCoupon"><i class="bi bi-ticket-perforated me-2"></i>Mã giảm giá của tôi</a></li>

                                @if (userRole == "Seller")
                                {
                                    <li><a class="dropdown-item text-success" href="/SellerChannel"><i class="bi bi-shop me-2"></i>Quản lý cửa hàng</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login" onclick="handleSmoothScroll(event, 'login-form')">Đăng nhập</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register" onclick="handleSmoothScroll(event, 'register-form')">Đăng ký</a></li>
                    }
                    <li class="nav-item ms-2">
                        <a class="nav-link" href="/Message" title="Tin nhắn">
                            <i class="bi bi-chat-dots fs-5"></i>
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="nav-link position-relative" href="/Cart">
                            <i class="bi bi-cart3 fs-5"></i>
                            @if (cartCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill badge-cart">
                                    @cartCount
                                </span>
                            }
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4 main-content-wrapper">
        <div class="hero-bar mb-4 d-flex flex-column flex-md-row align-items-md-center justify-content-between">
            <div class="d-flex align-items-center gap-3">
                <a href="/" class="logo-icon text-decoration-none shadow-sm" style="transition: transform 0.3s;">
                    <i class="bi bi-shop fs-4 text-primary"></i>
                </a>
                <div class="text-white fw-medium" style="font-size: 1.05rem; letter-spacing: 0.5px;">
                    Mua bán đồ công nghệ cũ giá rẻ, tiết kiệm và an toàn.
                </div>
            </div>

            <div class="mt-3 mt-md-0">
                @if (userRole != "Admin")
                {
                  <a class="btn btn-light me-2" href="/SellerChannel/CreateProduct">
                        <i class="bi bi-megaphone me-1 text-primary"></i>Đăng bán nhanh
                </a>
                }
                <a class="btn btn-outline-light" href="/Product?sort=new">
                    <i class="bi bi-stars me-1"></i>Hàng mới lên
                </a>
            </div>
        </div>

        @if (User.IsInRole("Seller") || userRole == "Seller")
        {
            @if (Context.Request.Path.ToString().Contains("/SellerChannel"))
            {
                <div class="row">
                    <div class="col-md-3">
                        @await Html.PartialAsync("_SellerSidebar")
                    </div>
                    <div class="col-md-9">
                        @RenderBody()
                    </div>
                </div>
            }
            else
            {
                @RenderBody()
            }
        }
        else
        {
            @RenderBody()
        }
    </div>

    <footer class="pt-5 pb-3 mt-5" style="background-color: #0b1124; color: #b8c4e0;">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="d-flex align-items-center gap-2 mb-3">
                        <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                            <i class="bi bi-shop-window"></i>
                        </div>
                        <h5 class="text-white fw-bold m-0">CHỢ ĐỒ CŨ</h5>
                    </div>
                    <p class="small mb-3" style="line-height: 1.6;">
                        Nơi kết nối đam mê công nghệ. Mua bán các thiết bị cũ chất lượng, giá rẻ và an toàn tuyệt đối cho cộng đồng.
                    </p>
                </div>

                <div class="col-lg-4 col-md-6">
                    <h6 class="text-white fw-bold mb-3">Hỗ trợ khách hàng</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-2"><a href="/Home/Policies" class="text-decoration-none footer-link">Chính sách bảo hành</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none footer-link">Quy định đổi trả</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-12">
                    <h6 class="text-white fw-bold mb-3">Liên hệ Admin</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-3 d-flex align-items-start">
                            <i class="bi bi-person-badge-fill text-primary me-2 fs-5"></i>
                            <div>
                                <span class="d-block text-white fw-bold">Võ Hoàng Trường</span>
                                <span class="text-white-50">Quản lý hệ thống</span>
                            </div>
                        </li>
                        <li class="mb-3 d-flex align-items-start">
                            <i class="bi bi-telephone-inbound-fill text-success me-2 fs-5"></i>
                            <div>
                                <span class="d-block text-white fw-bold">Hotline / Zalo</span>
                                <a href="tel:0937611667" class="text-decoration-none text-white-50">0937 611 667</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <hr class="border-secondary opacity-25 my-4">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center small">
                <div>&copy; 2025 <strong>Võ Hoàng Trường</strong>. All rights reserved.</div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>