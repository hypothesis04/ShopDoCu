@using Microsoft.AspNetCore.Http
@using Microsoft.EntityFrameworkCore
@inject IHttpContextAccessor HttpContextAccessor
@inject ShopDoCu.Models.ChoBanDoCuContext _context

@{
    // Lấy thông tin session
    var isLoggedIn = HttpContextAccessor.HttpContext?.Session.GetString("UserName") != null;
    var userRole = isLoggedIn ? HttpContextAccessor.HttpContext.Session.GetString("Role") : string.Empty;
    var userName = isLoggedIn ? HttpContextAccessor.HttpContext.Session.GetString("UserName") : string.Empty;
    var avatarUrl = isLoggedIn ? HttpContextAccessor.HttpContext.Session.GetString("AvatarUrl") : string.Empty;

    // --- LOGIC TÍNH SỐ LƯỢNG GIỎ HÀNG ---
    int cartCount = 0;
    if (isLoggedIn)
    {
        var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
        if (userId != null)
        {
            // Tính tổng số lượng item có trong giỏ của user này
            // Sử dụng catch để tránh lỗi nếu database chưa update migration
            try {
                cartCount = _context.Carts
                    .Where(c => c.UserId == userId)
                    .Sum(c => c.Quantity ?? 0);
            } catch { cartCount = 0; }
        }
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chợ Bán Đồ Cũ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="site-body">
    <div class="topbar py-2">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex gap-3">
                <span><i class="bi bi-shield-check me-1"></i>Giao dịch an toàn</span>
                <span><i class="bi bi-lightning-charge me-1"></i>Mua nhanh - Bán gọn</span>
            </div>
            <div class="d-flex gap-3">
                <a class="text-decoration-none text-white-50" href="/Home/LienHe"><i class="bi bi-telephone me-1"></i>Hỗ trợ</a>
                
                @if (isLoggedIn && userRole != "Admin")
                {
                    if (userRole == "Seller")
                    {
                        <a class="text-decoration-none text-white-50" href="/Product/Create" onclick="handleSmoothScroll(event, 'productForm')"><i class="bi bi-shop me-1"></i>Quản lý cửa hàng</a>
                    }
                    else
                    {
                        <a class="text-decoration-none text-white-50" href="/Account/SellerRegistration" onclick="handleSmoothScroll(event, 'registration-container')"><i class="bi bi-person-plus me-1"></i>Tham gia bán hàng</a>
                    }
                }
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <span class="fs-4 me-2">🛍️</span> Chợ Đồ Cũ
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Product">Sản phẩm</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-tags me-1"></i>Danh mục
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                             @if (ViewBag.Categories != null)
                            {
                                foreach (var cat in (IEnumerable<ShopDoCu.Models.Category>)ViewBag.Categories)
                                {
                                    <li><a class="dropdown-item" href="/Product?categoryId=@cat.CategoryId">@cat.CategoryName</a></li>
                                }
                            }
                        </ul>
                    </li>
                </ul>

                <form class="d-flex me-lg-3 mt-3 mt-lg-0" role="search" action="/Product/TimKiem" method="get">
                    <input class="form-control me-2" type="search" placeholder="Tìm đồ cũ tiết kiệm..." name="q" />
                    <button class="btn btn-light" type="submit"><i class="bi bi-search text-primary"></i></button>
                </form>

                <ul class="navbar-nav align-items-center ms-lg-3">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" id="userAvatar">
                                @if (avatarUrl.StartsWith("data:image"))
                                {
                                    <img src="@avatarUrl" alt="Avatar" class="avatar me-2" />
                                }
                                else
                                {
                                    <img src="@avatarUrl" alt="Avatar" class="avatar me-2" onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                    <div class="avatar me-2 d-none align-items-center justify-content-center bg-primary text-white fw-bold" style="width: 36px; height: 36px; border-radius: 50%;">
                                        @userName?.Substring(0, 1).ToUpper()
                                    </div>
                                }
                                @userName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-person-circle me-2"></i>Thông tin cá nhân</a></li>                                
                                <li><a class="dropdown-item" href="/Order/MyOrders"><i class="bi bi-bag-check me-2"></i>Đơn hàng của tôi</a></li>
                                @if (userRole == "Admin")
                                {
                                    <li><a class="dropdown-item text-primary" href="/Admin"><i class="bi bi-shield-lock me-2"></i>Trang Quản trị</a></li>
                                }
                                else if (userRole == "Seller")
                                {
                                    <li><a class="dropdown-item text-success" href="/Product/Create" onclick="handleSmoothScroll(event, 'productForm')"><i class="bi bi-shop me-2"></i>Quản lý cửa hàng</a></li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" href="/Account/SellerRegistration" onclick="handleSmoothScroll(event, 'registration-container')"><i class="bi bi-person-plus me-2"></i>Tham gia bán hàng</a></li>
                                }
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login" onclick="handleSmoothScroll(event, 'login-form')">Đăng nhập</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register" onclick="handleSmoothScroll(event, 'register-form')">Đăng ký</a></li>
                    }

                    @if (isLoggedIn)
                    {
                        <li class="nav-item ms-2">
                            <a class="nav-link" href="/Order/MyOrders" title="Theo dõi đơn hàng">
                                <i class="bi bi-truck fs-5"></i>
                            </a>
                        </li>
                    }

                    <li class="nav-item ms-2">
                        <a class="nav-link position-relative" href="/Cart">
                            <i class="bi bi-cart3 fs-5"></i>
                            @if (cartCount > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill badge-cart">
                                    @cartCount
                                </span>
                            }
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-4">
       <div class="hero-bar mb-4 d-flex flex-column flex-md-row align-items-md-center justify-content-between">
    
            <div class="d-flex align-items-start gap-3">
                <div class="logo-icon">
                    <i class="bi bi-shop"></i>
                </div>
                <div>
                    <div class="fs-5 fw-bold">Chợ Đồ Cũ</div>
                    <div class="text-white-50">
                        Mua bán đồ công nghệ cũ giá rẻ, tiết kiệm và an toàn.
                    </div>
                </div>
            </div>

            <div class="mt-3 mt-md-0">
                @if (userRole != "Admin")
                {
                    <a class="btn btn-light me-2" href="/Product/Create" onclick="handleSmoothScroll(event, 'productForm')">
                        <i class="bi bi-megaphone me-1 text-primary"></i>Đăng bán nhanh
                    </a>
                }
                <a class="btn btn-outline-light" href="/Product?sort=new">
                    <i class="bi bi-stars me-1"></i>Hàng mới lên
                </a>
            </div>

        </div>

        <div class="card-surface p-4">
            @RenderBody()
        </div>
    </div>

    <footer class="py-4 mt-5">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <div>© 2025 Chợ Bán Đồ Cũ — Kết nối người mua và người bán an toàn.</div>
            <div class="d-flex gap-3">
                <a class="text-decoration-none text-white-50" href="/Home/About">Về chúng tôi</a>
                <a class="text-decoration-none text-white-50" href="/Home/Policies">Chính sách</a>
                <a class="text-decoration-none text-white-50" href="/Home/LienHe">Liên hệ</a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>