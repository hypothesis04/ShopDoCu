@model IEnumerable<ShopDoCu.Models.UserCoupon>
@{
    ViewData["Title"] = "Kho Voucher của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Lấy danh sách thông tin gốc (để xem ngày hết hạn)
    var masterCoupons = ViewBag.MasterCoupons as Dictionary<string, ShopDoCu.Models.Coupon>;
}

<div class="container my-5" style="max-width: 900px;">
    <div class="d-flex align-items-center mb-4">
        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
            <i class="bi bi-ticket-perforated-fill fs-4"></i>
        </div>
        <div>
            <h3 class="fw-bold mb-0 text-primary">Kho Voucher</h3>
            <p class="text-muted mb-0">Danh sách mã giảm giá bạn đang sở hữu</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded-4 border border-dashed">
            <img src="https://cdn-icons-png.flaticon.com/512/4076/4076432.png" width="80" class="opacity-50 mb-3">
            <h5 class="fw-bold text-muted">Ví của bạn đang trống!</h5>
            <p class="mb-4">Hãy mua sắm hoặc săn mã giảm giá từ các Shop nhé.</p>
            <a href="/" class="btn btn-primary rounded-pill px-4">Săn Voucher ngay</a>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var item in Model)
            {
                // Lấy thông tin gốc để kiểm tra hạn
                var master = masterCoupons != null && masterCoupons.ContainsKey(item.Code) ? masterCoupons[item.Code] : null;
                
                // Kiểm tra trạng thái
                bool isExpired = master != null && DateTime.Now > master.EndDate;
                bool isUsed = !item.IsActive; // Trong logic của mình, khi dùng rồi thì IsActive = false hoặc xóa đi
                
                string cardClass = "border-primary";
                string bgClass = "bg-white";
                string textClass = "text-dark";
                string statusBadge = "<span class='badge bg-success'>Sẵn sàng</span>";

                if (isExpired)
                {
                    cardClass = "border-secondary opacity-75";
                    bgClass = "bg-light";
                    statusBadge = "<span class='badge bg-secondary'>Hết hạn</span>";
                }
                else if (isUsed)
                {
                    cardClass = "border-secondary opacity-75";
                    bgClass = "bg-light";
                    statusBadge = "<span class='badge bg-dark'>Đã dùng</span>";
                }

                <div class="col-md-6">
                    <div class="card shadow-sm h-100 @cardClass @bgClass position-relative overflow-hidden">
                        <div class="position-absolute top-50 start-0 translate-middle rounded-circle bg-light border-end" style="width: 20px; height: 20px; margin-left: -1px;"></div>
                        <div class="position-absolute top-50 end-0 translate-middle rounded-circle bg-light border-start" style="width: 20px; height: 20px; margin-right: -11px;"></div>

                        <div class="card-body d-flex align-items-center">
                            <div class="flex-shrink-0 me-3 text-center" style="width: 80px;">
                                <div class="rounded p-3 bg-primary bg-opacity-10 text-primary">
                                    <i class="bi bi-gift-fill fs-3"></i>
                                </div>
                            </div>

                            <div class="flex-grow-1 border-start ps-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h5 class="fw-bold text-danger mb-1">@item.Code</h5>
                                    @Html.Raw(statusBadge)
                                </div>
                                
                                <div class="fw-bold fs-5 mb-1">
                                    Giảm @item.DiscountAmount.ToString("N0")đ
                                </div>
                                
                                <div class="small text-muted mb-2">
                                    @if (master != null)
                                    {
                                        <span>Đơn tối thiểu: @master.MinOrderAmount.ToString("N0")đ</span><br>
                                        <span class="text-danger"><i class="bi bi-clock me-1"></i>HSD: @master.EndDate.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span>Mã giảm giá đặc biệt</span>
                                    }
                                </div>

                                @if (!isExpired && !isUsed)
                                {
                                    <button class="btn btn-sm btn-outline-primary w-100" onclick="navigator.clipboard.writeText('@item.Code'); alert('Đã sao chép mã: @item.Code');">
                                        <i class="bi bi-files me-1"></i>Sao chép mã
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>